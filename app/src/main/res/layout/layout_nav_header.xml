<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:padding="10dp"
    android:background="?attr/colorPrimary">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_portrait"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_person_white_70dp"
        android:layout_alignParentLeft="true"/>


    <TextView
        android:id="@+id/nav_usr_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nav_portrait"
        android:text="ZhaoHeh"
        android:textColor="@color/white"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/nav_mail_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="hehezhao621@126.com"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>