<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="1dp"
    android:paddingLeft="20dp"
    android:paddingRight="5dp"
    android:background="@color/suspended_state_short_task_bg_color">

    <TextView
        android:id="@+id/task_content_for_short_saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:text="This is the task's name."
        android:textSize="18sp"
        android:textColor="@color/ready_state_short_task_txt_color"
        android:textStyle="normal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/state_instruction_for_short_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:text="准备"
            android:textSize="15sp"
            android:textColor="#C3C3C3"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/opration_menu_for_short_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:src="@drawable/ic_more_vert_black_24dp"/>

    </LinearLayout>

</RelativeLayout>